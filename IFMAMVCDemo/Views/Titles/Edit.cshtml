@model IFMAMVCDemo.Data.Models.Title

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>
    <a title="Back to List" class="backtoLink" asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
        </svg>
    </a>
    Title
</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div class="row">
            <div class="col-md-6">
                <div class="formWrapper">
                    <div class="formContent">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CategoryId" class="control-label"></label>
                                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TitleName" class="control-label"></label>
                                    <input asp-for="TitleName" class="form-control" />
                                    <span asp-validation-for="TitleName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="formAction">
                        <a asp-action="Index" class="cancelBtn">Back to List</a>
                        <input type="submit" value="Create" class="formActionBtn" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
