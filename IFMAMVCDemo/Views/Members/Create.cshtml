<div class="row">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="formWrapper">
                    <div class="formContent">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="MiddleName" class="control-label"></label>
                                    <input asp-for="MiddleName" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Gender" class="control-label"></label>
                                    <div>
                                        <input asp-for="Gender" type="radio" value="Male" /> Male
                                        <input asp-for="Gender" type="radio" value="Female" /> Female
                                        <input asp-for="Gender" type="radio" value="Unknown" /> Unknown
                                    </div>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <input asp-for="Address" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DateOfBirth" class="control-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TitleId" class="control-label"></label>
                                    <select asp-for="TitleId" class="form-control" asp-items="@(new SelectList(ViewBag.TitleId, "Value", "Text"))">
                                        <option value="">Select Title...</option>
                                    </select>
                                    <span asp-validation-for="TitleId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DateOfJoin" class="control-label"></label>
                                    <input asp-for="DateOfJoin" class="form-control" />
                                    <span asp-validation-for="DateOfJoin" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PassportNo" class="control-label"></label>
                                    <input asp-for="PassportNo" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="AadharNo" class="control-label"></label>
                                    <input asp-for="AadharNo" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DrivingLicenseNo" class="control-label"></label>
                                    <input asp-for="DrivingLicenseNo" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="files">Files</label>
                                    <input type="file" id="files" name="Files" multiple />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="formAction">
                        <a asp-action="Index" class="cancelBtn">Back to List</a>
                        <input type="submit" value="Create" class="formActionBtn" />
                    </div>
                </div>
            </div>
        </div>
    </form>
