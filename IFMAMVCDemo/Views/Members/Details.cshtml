@model IFMAMVCDemo.Data.Models.MemberViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfJoin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfJoin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PassportNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PassportNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AadharNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AadharNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DrivingLicenseNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DrivingLicenseNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TitleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitleName)
        </dd>
        <dt class="col-sm-2">
            Files
        </dt>
        <dd class="col-sm-10">
            @if (Model.Documents != null)
            {
                foreach (var document in Model.Documents)
                {
                    <div>
                        <a href="~/uploads/@document.FileName">@document.FileName</a>
                    </div>
                }
            }
        </dd>
        <dt class="col-sm-2">
            Payments
        </dt>
        <dd class="col-sm-10">
            @if (Model.Payments != null && Model.Payments.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Payment Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToString("d")</td>
                                <td>@payment.Amount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div>No payments found.</div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
