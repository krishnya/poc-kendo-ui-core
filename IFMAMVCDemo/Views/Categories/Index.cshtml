@model IEnumerable<IFMAMVCDemo.Data.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p class="createNew">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td class="actions">
                <a class="editAction" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="detailsAction" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="deleteAction" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
